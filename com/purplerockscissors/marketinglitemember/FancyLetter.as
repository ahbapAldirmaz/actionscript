package com.purplerockscissors.marketinglitemember{	import caurina.transitions.Tweener;	import flash.display.Sprite;	import fl.text.TLFTextField;	import flash.text.TextFieldAutoSize;	import flash.text.TextFormat;	import flash.text.TextField;	import flash.utils.setTimeout;	import flash.events.Event;		public class FancyLetter extends Sprite {		public static const animTime:Number = 0.15;				public function FancyLetter(letter:String, format:TextFormat=null, id:int=0, animOffset:Number=0) {			this.scaleY = 0;			this.alpha = 0;						var tlf:TLFTextField = new TLFTextField();			if(format) {				//tlf.setTextFormat(format);				tlf.defaultTextFormat = format;			}			tlf.selectable = false;			tlf.embedFonts = true;			tlf.text = letter.toUpperCase();			tlf.autoSize = TextFieldAutoSize.LEFT;			tlf.y = 0 - tlf.height;			addChild(tlf);						setTimeout(animate, (FancyLetter.animTime * 1000) * id + (animOffset * 1000));		}				private function complete():void {			dispatchEvent(new Event(Event.COMPLETE));		}		private function animate():void {			Tweener.addTween(this, {scaleY:1.0, alpha:1.0, time:FancyLetter.animTime, transition:"easeOutCirc", onComplete:complete});		}	}	}