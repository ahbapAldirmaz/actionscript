package com.purplerockscissors.marketinglitemember {	import flash.events.Event;	import flash.display.MovieClip;	import flash.text.TextFormat;	import flash.utils.setTimeout;		public class FancyRow extends MovieClip {		public var animTime:Number;				public function FancyRow(str:String, format:TextFormat=null, animOffset:Number=0) {			animTime = str.length * FancyLetter.animTime;						for(var i = 0; i < str.length; ++i) {				var l:FancyLetter = new FancyLetter(str.charAt(i), format, i, animOffset);				l.x = this.width;				addChild(l);								if(i == str.length - 1) {					l.addEventListener(Event.COMPLETE, complete);				}			}						this.x = 0 - this.width / 2;			this.y += format.size + 20.0;						if(str.length == 0) setTimeout(complete, animOffset * 1000, new Event(Event.COMPLETE));		}				private function complete(event:Event) {			dispatchEvent(event);		}	}	}