package com.purplerockscissors.marketinglitemember {	import caurina.transitions.Tweener;	import com.purplerockscissors.marketinglitemember.ShimmeringStar;	import flash.events.Event;	import flash.display.MovieClip;	import flash.display.Sprite;		public class MainBackground extends MovieClip {		public static var instance:MainBackground;		public var ratio:Number;		public var image:Sprite;		public var desat:Sprite;				public function MainBackground() {			MainBackground.instance = this;						ratio = stage.stageHeight / stage.stageWidth;//desat.height / desat.width;			desat.alpha = 0.0;						stage.addEventListener(Event.RESIZE, stageResizeHandler);			stage.dispatchEvent(new Event(Event.RESIZE));		}		public function saturate(bool:Boolean=true):void {			if(bool) {				Object(image).swirl.visible = true;				Tweener.addTween(desat, {alpha:0.0, time:1.0, transition:"linear"});			} else {				Object(image).swirl.visible = false;				Tweener.addTween(desat, {alpha:1.0, time:1.0, transition:"linear"});			}		}		function stageResizeHandler(event:Event):void {			trace(stage.stageHeight);			if(stage.stageHeight / stage.stageWidth > ratio) {				// height is bigger				height = stage.stageHeight + 10;				width = stage.stageHeight / ratio + 10;			} else {				height = stage.stageWidth * ratio + 10;				width = stage.stageWidth + 10;			}						x = stage.stageWidth / 2;			y = stage.stageHeight / 2;		}	}}