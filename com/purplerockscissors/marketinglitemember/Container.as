package com.purplerockscissors.marketinglitemember {	import flash.display.MovieClip;	import flash.events.Event;		public class Container extends MovieClip {		public static var instance:Container;				public function Container() {			Container.instance = this;						stage.addEventListener(Event.RESIZE, stageResizeHandler);			stage.dispatchEvent(new Event(Event.RESIZE));						stop();		}				public function stageResizeHandler(event:Event):void {			x = stage.stageWidth / 2;			y = stage.stageHeight / 2;		}	}}