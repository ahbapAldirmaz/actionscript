package com.purplerockscissors.marketinglitemember {	import caurina.transitions.Tweener;	import flash.display.Sprite;	import flash.events.Event;	import flash.filters.DropShadowFilter;		public class Star extends Sprite {		private var _rot_speed:Number = Math.random() * 0.5 - 0.25;		private var _color:Number;		private var _base_alpha:Number;				public var ball:Sprite;				public function Star() {			//visible = false;			//this.scaleX = this.scaleY = 0;			this.scaleX = this.scaleY = 2.0;			this.alpha = 0.0;			this._base_alpha = Math.random() * 0.4 + 0.6			this.rotation = Math.random() * 360.0;						switch(parent.name) {				case "change":					_color = 0xF69200;				break;				case "see":					_color = 0x2F5781;				break;				case "live":					_color = 0xC22B27;				break;				case "trust":					_color = 0x882083;				break;			}						ball.filters = [new DropShadowFilter(0.0, 0, _color, 1.0, 30.0, 30.0, 4.0, 2)];			//addEventListener(Event.ENTER_FRAME, enterFrameHandler);		}				private function enterFrameHandler(event:Event):void {			this.alpha = Math.random() * (1.0 - _base_alpha) + _base_alpha;			this.rotation += _rot_speed;		}				public function show(bool:Boolean=true):void {			//_rot_speed = Math.random() * 1 + 0.5;			//if(Math.random() >= 0.5) _rot_speed *= -1;						if(bool) {				Tweener.addTween(this, {scaleX:1.0, scaleY:1.0, time:1.0, transition:"easeOutLinear"});				Tweener.addTween(this, {alpha:1.0, time:0.5, transition:"linear"});								//visible = true;				addEventListener(Event.ENTER_FRAME, enterFrameHandler);				//Tweener.addTween(this, {scaleX:1.0, time:0.5, transition:"easeOutLinear"});				//Tweener.addTween(this, {scaleY:1.0, time:0.35, transition:"easeOutLinear"});			} else {				var complete:Function = function():void {					visible = false;					removeEventListener(Event.ENTER_FRAME, enterFrameHandler);				}				Tweener.addTween(this, {scaleX:0.0, time:0.35, transition:"easeOutLinear"});				Tweener.addTween(this, {scaleY:0.0, time:0.5, transition:"easeOutLinear", onComplete:complete});			}		}	}}