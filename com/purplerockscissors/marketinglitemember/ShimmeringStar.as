package com.purplerockscissors.marketinglitemember {	import caurina.transitions.Tweener;	import flash.display.MovieClip;	import flash.events.Event;	import flash.utils.setTimeout;	import flash.display.Sprite;	import flash.filters.BlurFilter;	import flash.display.BlendMode;			public class ShimmeringStar extends MovieClip {		private var _rot_speed:Number;		private var _alpha:Number;		private var _scale:Number;				public var ball:Sprite;				public function ShimmeringStar() {			//this.blendMode = BlendMode.ADD;						scaleX = scaleY = 0.0;			this._scale = Math.random() * 0.04 + 0.02;			alpha = this._alpha = Math.random() * 0.26 + 0.06;			var blur = Math.random() * (0.1 - this._scale) * 10;			filters = [new BlurFilter(blur, blur, 2)]			makeTimeout();		}				private function destroy():void {			Object(parent).birthStar();			parent.removeChild(this);		}		private function enterFrameHandler(event:Event):void {			alpha = Math.random() * (this._alpha * 0.8) + (this._alpha + 0.2)			//rotation += _rot_speed;		}		private function shimmer():void {			try {			var time = Math.random() * 6.0 + 2;						_rot_speed = Math.random() * 1 + 0.0;			if(Math.random() >= 0.5) _rot_speed *= -1;						var c2:Function = function():void {				removeEventListener(Event.ENTER_FRAME, enterFrameHandler);				destroy();			}			var c1:Function = function():void {				Tweener.addTween(this, {scaleX:0.0, scaleY:0.0, time:time * 2, transition:"linear", onComplete:c2});			}						addEventListener(Event.ENTER_FRAME, enterFrameHandler);			//Tweener.addTween(this, {scaleX:this._scale, scaleY:this._scale, time:time / 2, transition:"linear", onComplete:c1});			this.scaleX = this.scaleY = this._scale;			} catch (e:Error) {				trace(e);			}		}		private function makeTimeout():void {			shimmer();			//setTimeout(shimmer, Math.random() * 5000);		}	}	}